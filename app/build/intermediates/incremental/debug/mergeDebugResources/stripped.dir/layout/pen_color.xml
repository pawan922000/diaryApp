<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/color"
        android:weightSum="5">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/purplepen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_pen"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/blackpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:backgroundTint="@color/black" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/redpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:backgroundTint="@color/red_pen" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bluepen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:backgroundTint="@color/blue_pen" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/greenpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:backgroundTint="@color/green_pen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>